<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
   	android:paddingBottom="4dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical" >    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            	<TextView
        			android:id="@+id/alkamisaika"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textStyle="normal"
        			android:textSize="20sp"
        			android:textColor="@color/white"
        			android:padding="0dp"
        			android:layout_margin="0dp" >
    			</TextView>
    			<TextView
    			    android:id="@+id/valiviivaViewId"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textStyle="normal"
        			android:textSize="20sp"
        			android:textColor="@color/white"
        			android:padding="0dp"
        			android:text="@string/vÃ¤liviiva"
        			android:layout_margin="0dp" >
    			</TextView>
    		</LinearLayout>	
            <TextView
        		android:id="@+id/paattymisaika"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="normal"
        		android:textSize="20sp"
        		android:textColor="@color/white"
        		android:padding="0dp"
        		android:layout_margin="0dp" >
    		</TextView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1" >    
        
            <TextView
        		android:id="@+id/tapahtumanimi"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="bold"
        		android:textSize="22sp"
        		android:padding="0dp" >
    		</TextView>
    		<TextView
    		    android:id="@+id/tapahtumapaikka"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:textStyle="normal"
        		android:textSize="20sp"
        		android:padding="0dp" >
    		</TextView>
            <TextView
        		android:id="@+id/tapahtumakuvaus"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textStyle="normal"
        		android:textSize="18sp"
        		android:padding="0dp" >
    		</TextView>
    </LinearLayout>
        
    <TextView
        android:id="@+id/kansinumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:textSize="24sp"
        android:textColor="@color/white" >
    </TextView>

</LinearLayout> 